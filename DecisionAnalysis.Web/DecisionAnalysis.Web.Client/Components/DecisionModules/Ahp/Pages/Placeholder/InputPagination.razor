
@rendermode InteractiveAuto

<div class="w-100 px-3 py-2 container position-relative" style="background-color: #e2eaec">
    <SfDropDownList TValue="string" TItem="InputData" Placeholder="Please Select" CssClass="e-multi-column" DataSource="@Data" PopupHeight="300px" Width="100%" >
        <DropDownListTemplates TItem="InputData">
            <ItemTemplate>
                
                <div class="d-flex justify-content-between align-items-center px-2">
                    <span>@context.first_criteria</span>
                    <span>
                        <span>(@context.first_rate)</span>
                        <img src="./images/input_judge.png" width="50" height="5" />
                        <span>(@context.second_rate)</span>
                    </span>
                    <span>@context.second_criteria</span>
                </div>
                            
            </ItemTemplate>
            <ValueTemplate>
                <div class="d-flex justify-content-between align-items-center px-2">
                    <span>@context.first_criteria</span>
                    <span>
                        <span>(@context.first_rate)</span>
                        <img src="./images/input_judge.png" width="50" height="5" />
                        <span>(@context.second_rate)</span>
                    </span>
                    <span>@context.second_criteria</span>
                </div>
            </ValueTemplate>
        </DropDownListTemplates>
        <DropDownListEvents TItem="InputData" TValue="string" ValueChange="SelectAction"></DropDownListEvents>
        <DropDownListFieldSettings Text="first_criteria" Value="uid" />
    </SfDropDownList>

    <SfPager @ref="@_page" ShowPagerMessage="false" PageSize="5" NumericItemsCount="1" TotalItemsCount="25" ItemClick="Click">
    </SfPager>
    <div class="form-check position-absolute checkbox-sm" style="bottom: 15px; right: 45px;">
        <label class="form-check-label" for="complete">
            Complete
        </label>
        <input class="form-check-input" type="checkbox" value="" id="complete">
    </div>
</div>

